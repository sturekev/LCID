<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Residence Hall" class="action-bar" icon="">
        <ActionItem tap="onLogout" android.position="popup" text="Logout" android.systemIcon="ic_menu_logout" />
    </ActionBar>

    <GridLayout rows="auto, *, *, *, auto" class="main-container">
        <Label row="0" text="Header Title" class="header-label" />
    <GridLayout row="2" rows="auto, *, *" columns="*" class="qr-example">
        <Button row="1" text="Get token" tap="{{ onImageLoadedBasic }}" class="btn btn-primary"></Button> 
        <Image src="" row="2" col="0" loaded="{{onImageLoadedBasic}}"></Image>
    </GridLayout>
        <Label row="4" text="Footer Text" class="footer-label" />
    </GridLayout>
    
</Page>
