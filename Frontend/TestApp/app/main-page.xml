<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="LCID Login" class="action-bar" icon="" />

    <FlexboxLayout class="page">
        <StackLayout class="form">

            <StackLayout class="p-t-15">
                <TextField class="m-t-10 m-b-10 m-l-15 m-r-15" id="usr" class="input" hint="Username" text="{{ username }}"></TextField>
                <TextField class="m-t-10 m-b-10 m-l-15 m-r-15" id="pass" class="input" secure="True" hint="Password" text="{{ password }}"></TextField>
                <Label text="" id="errorMSG" class="h2 text-center" textWap="true" />
                <Label class="m-t-10 m-b-10 m-l-15 m-r-15" text="Forgot password?" tap="onForgotPasswordTap"></Label>
                <Button text="SIGN IN" tap="logIn" class="btn btn-primary"></Button> 
                <Button text="Continue As Guest" tap="navigateToHome" class="btn btn-primary"></Button> 
            </StackLayout>

        </StackLayout>
    </FlexboxLayout>
</Page>
