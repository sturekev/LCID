<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Library Checkout" class="action-bar" icon="">
        <ActionItem tap="onLogout" android.position="popup" text="Logout" android.systemIcon="ic_menu_logout" />
    </ActionBar>

    <FlexboxLayout class="main-container">
        <FlexboxLayout class='profile'>
            <Button text="Generate QRCode" width="300" height="150" class="vertical-button" tap="giveMeBook" />
            <StackLayout orientation="vertical">
                <Label id = "bc" text="" class="barcode"></Label>
            </StackLayout>      
        </FlexboxLayout>

        <FlexboxLayout class="horizontal-button-container">
            <Button text="Residence" width="155" class="horizontal-button" tap="onResidenceHall" fontSize="14" />
            <Button text="Dining" width="150" class="horizontal-button" tap="onDiningService" fontSize="14" />
            <Button text="Library" width="150" class="horizontal-button" tap="onLibraryCheckout" fontSize="14" />
        </FlexboxLayout>
    </FlexboxLayout>
</Page>
